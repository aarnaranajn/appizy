<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Affix Navigation</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <style type="text/css">

        /* Affix nav theme */
        .nav-affix > .nav {
            margin-top: 20px;
            width: 140px;
        }

        ul.nav-affix li {
            margin: 0;
        }

        ul.nav-affix li:first-child {
            border-top: none;
        }

        ul.nav-affix li a {
            margin: 0;
            padding: 8px 16px;
            border-radius: 0;
        }

        .nav-affix li.active > a,
        .nav-affix li.active > a:hover {
            font-weight: bold;
            border-left: 1px solid #0088cc;
        }

        /* Show child nav if parent if active */
        .nav-affix .nav .nav {
            display: none;
        }

        .nav-affix .nav .nav > li > a {
            padding-left: 20px;
            font-size: 0.9em;
        }

        .nav-affix .nav > .active > .nav {
            display: block;
        }

        /* Set the top position of pinned element */
        .nav-affix {
            top: 70px;
        }
    </style>
</head>

<body data-spy="scroll" data-target="#myScrollspy">

<div class="navbar navbar-inverse navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Affix navigation</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">A page</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</div>

{% if options.component == 'scroll-spy' %}

    <div class="container">
        <div class="row">
            <div class="col-sm-3 hidden-xs nav-affix" id="myScrollspy">
                <ul class="nav" data-spy="affix" data-offset-top="0">
                    {% for sheet in spreadSheet.getSheets() %}
                        <li><a href="#section{{ sheet.getId() }}">{{ sheet.getName() }}</a>
                            <ul class="nav">
                                {% for row in sheet.getRows() %}
                                    {% for cell in row.getCells() %}
                                        {% if loop.first %}
                                            <li><a href="#{{ row.getName() }}">{{ cell.getValue() | striptags }}</a>
                                            </li>
                                        {% else %}
                                        {% endif %}
                                    {% endfor %}
                                {% endfor %}
                            </ul>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-sm-9">
                {% for sheet in spreadSheet.getSheets() %}
                    <h2 id="section{{ sheet.getId() }}">{{ sheet.getName() }}</h2>
                    {% for row in sheet.getRows() %}
                        {% for cell in row.getCells() %}
                            {% if  loop.first %}
                                <h3 id="{{ row.getName() }}">{{ cell.getValue() | striptags }}</h3>
                            {% else %}
                                {{ cell.getValue() | raw }}
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                    <hr>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
<!-- jQuery and Bootstrap libraries -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
        integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
        crossorigin="anonymous"></script>
</body>
</html>
